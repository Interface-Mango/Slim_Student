<Window x:Class="Slim_Student.View.WidgetInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="WidgetInputWindow" Height="100" Width="330" WindowStyle="None" ResizeMode="NoResize" BorderThickness="1" BorderBrush="#FF0063C5" MouseLeftButtonDown="Window_MouseLeftButtonDown">
    <Grid>
        <TextBox Name="TextBoxBuffer" HorizontalAlignment="Left" Height="30" Margin="10,35,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="192" >
            <TextBox.InputBindings>
                <KeyBinding Key="Enter" Command="{Binding SendCommand}"/>
            </TextBox.InputBindings>
        </TextBox>
        <Button Command="{Binding SendCommand}" Name="BtnSend" Content="전송" HorizontalAlignment="Left" Height="80" Margin="217,10,0,0" VerticalAlignment="Top" Width="103"/>

    </Grid>
</Window>
