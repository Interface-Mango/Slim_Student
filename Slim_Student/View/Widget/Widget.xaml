<Window x:Class="Slim_Student.View.Widget"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Widget" Height="180" Width="540" WindowStyle="None" ResizeMode="NoResize" MouseLeftButtonDown="Window_MouseLeftButtonDown" BorderThickness="1" BorderBrush="#FF0063C5">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="23*"/>
            <RowDefinition Height="67*"/>
        </Grid.RowDefinitions>
        <Button Click="BtnStatus_Click" Name="BtnStatus" Content="?" HorizontalAlignment="Left" Margin="10,2,0,0" VerticalAlignment="Top" Width="100" Height="122" Grid.Row="1"/>
        <Button Click="BtnQuestionMark_Click" Name="BtnQuestionMark" Content="LED" HorizontalAlignment="Left" Margin="115,2,0,0" VerticalAlignment="Top" Width="100" Height="122" Grid.Row="1"/>
        <Button Click="BtnNumber_Click" Name="BtnNumber" Content="숫자" HorizontalAlignment="Left" Margin="220,2,0,0" VerticalAlignment="Top" Width="100" Height="122" Grid.Row="1"/>
        <Button Click="BtnOX_Click" Name="BtnOX" Content="O/X" HorizontalAlignment="Left" Margin="430,2,0,0" VerticalAlignment="Top" Width="100" Height="122" Grid.Row="1"/>
        <Button Click="BtnCheck_Click" Name="BtnCheck" Content="V" HorizontalAlignment="Left" Margin="325,2,0,0" VerticalAlignment="Top" Width="100" Height="122" Grid.Row="1"/>
        <Button Click="BtnHome_Click" Name="BtnHome" Content="홈버튼" HorizontalAlignment="Left" Margin="430,10,0,0" VerticalAlignment="Top" Width="100" Height="33"/>
    </Grid>
</Window>
