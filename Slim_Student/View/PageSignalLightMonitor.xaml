<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:ed="http://schemas.microsoft.com/expression/2010/drawing" x:Class="Slim_Student.View.PageSignalLightMonitor"
      x:Name="PageSignal"
      Width="972"
      Height="629"
      WindowHeight="700"
      WindowWidth="1200"
      mc:Ignorable="d">
	<Page.Resources>
		<Storyboard x:Key="NumberClick">
			<DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)" Storyboard.TargetName="canvas">
				<EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="252"/>
			</DoubleAnimationUsingKeyFrames>
			<DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)" Storyboard.TargetName="canvas1">
				<EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="252"/>
			</DoubleAnimationUsingKeyFrames>
			<DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.Y)" Storyboard.TargetName="canvas2">
				<EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="252"/>
			</DoubleAnimationUsingKeyFrames>
			<DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[3].(TranslateTransform.X)" Storyboard.TargetName="canvas3">
				<EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="-3"/>
				<EasingDoubleKeyFrame KeyTime="0:0:0.6" Value="-468"/>
			</DoubleAnimationUsingKeyFrames>
		</Storyboard>
	</Page.Resources>
	<Page.Triggers>
		<EventTrigger RoutedEvent="FrameworkElement.Loaded">
			<BeginStoryboard x:Name="NumberClick_BeginStoryboard" Storyboard="{StaticResource NumberClick}"/>
		</EventTrigger>
	</Page.Triggers>

	<Grid x:Name="DetailPanel">
		<Grid.RowDefinitions>
			<RowDefinition Height="40"/>
			<RowDefinition Height="*"/>
		</Grid.RowDefinitions>
		<Canvas x:Name="SignalTitle" HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="972" Background="#FF123663">
			<TextBlock TextWrapping="Wrap" Text="신호등 모니터" Canvas.Top="10" VerticalAlignment="Center" Canvas.Left="80" Height="20" Width="108" FontSize="14.667" FontWeight="Bold" Foreground="White"/>
		</Canvas>
		<Canvas x:Name="SignalCanvas" HorizontalAlignment="Left" Height="589" VerticalAlignment="Top" Width="972" Margin="0,40,0,0" Background="White">
			<Canvas HorizontalAlignment="Left" Height="159.237" VerticalAlignment="Top" Width="182" Canvas.Left="403" Canvas.Top="108" Background="#FFD6EAE4">
				<Image x:Name="CurrentState" Height="135" Width="162" Canvas.Top="10" Canvas.Left="10"/>
			</Canvas>
			<Canvas x:Name="canvas" HorizontalAlignment="Left" Height="220" VerticalAlignment="Top" Width="240" Canvas.Top="343" Background="White" RenderTransformOrigin="0.5,0.5">
				<Canvas.RenderTransform>
					<TransformGroup>
						<ScaleTransform/>
						<SkewTransform/>
						<RotateTransform/>
						<TranslateTransform/>
					</TransformGroup>
				</Canvas.RenderTransform>
				<Image x:Name="questionImg1" Height="200" Width="220" Source="Images/question.png" Canvas.Top="10" Canvas.Left="10" Cursor="Hand">
					<Image.InputBindings>
						<MouseBinding 
							MouseAction="LeftClick"
							Command="{Binding QuestionSignal}"/>
					</Image.InputBindings>
				</Image>
			</Canvas>
			<Canvas x:Name="canvas1" HorizontalAlignment="Left" Height="220" VerticalAlignment="Top" Width="240" Canvas.Left="240" Canvas.Top="343" Background="White" RenderTransformOrigin="0.5,0.5">
				<Canvas.RenderTransform>
					<TransformGroup>
						<ScaleTransform/>
						<SkewTransform/>
						<RotateTransform/>
						<TranslateTransform/>
					</TransformGroup>
				</Canvas.RenderTransform>
				<Image x:Name="checkImg1" Height="200" Width="220" Source="Images/check.png" Canvas.Top="10" Canvas.Left="10" Cursor="Hand"/>
			</Canvas>
			<Canvas x:Name="canvas3" HorizontalAlignment="Left" Height="220" VerticalAlignment="Top" Width="240" Canvas.Left="480" Canvas.Top="343" Background="White" RenderTransformOrigin="0.5,0.5">
				<Canvas.RenderTransform>
					<TransformGroup>
						<ScaleTransform/>
						<SkewTransform/>
						<RotateTransform/>
						<TranslateTransform/>
					</TransformGroup>
				</Canvas.RenderTransform>
				<Image x:Name="numberImg1" Height="200" Width="220" Canvas.Top="10" Canvas.Left="10" Source="Images/number.png" Cursor="Hand"/>
			</Canvas>
			<Canvas x:Name="canvas2" HorizontalAlignment="Left" Height="220" VerticalAlignment="Top" Width="240" Background="White" Canvas.Left="720" Canvas.Top="343" RenderTransformOrigin="0.5,0.5">
				<Canvas.RenderTransform>
					<TransformGroup>
						<ScaleTransform/>
						<SkewTransform/>
						<RotateTransform/>
						<TranslateTransform/>
					</TransformGroup>
				</Canvas.RenderTransform>
				<Image x:Name="oxImg1" Height="200" Width="220" Canvas.Top="10" Canvas.Left="10" Source="Images/ox.png" Cursor="Hand"/>
			</Canvas>
		</Canvas>
		<Image HorizontalAlignment="Left" Height="100" Margin="-164,410,0,0" Grid.Row="1" VerticalAlignment="Top" Width="100"/>
	</Grid>
</Page>
