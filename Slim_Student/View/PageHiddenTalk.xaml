<Page 
    x:Class="Slim_Student.PageHiddenTalk"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    x:Name="Page"
    Width="972"
    Height="629"
    WindowWidth="1200" WindowHeight="700"
    mc:Ignorable="d">

    <Grid x:Name="MainPanel" >
        <Canvas x:Name="HiddenTitle" HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="972" Background="#FF94EA8B" Margin="0,0,0,0">
            <TextBlock TextWrapping="Wrap" Text="익명 단체 대화방" Canvas.Top="10" VerticalAlignment="Center" Canvas.Left="80" Height="20" Width="127.5" FontSize="14.667" FontWeight="Bold"/>
        </Canvas>
        <Canvas x:Name="HiddenCanvas" HorizontalAlignment="Left" Height="589" VerticalAlignment="Top" Width="972" Margin="0,40,0,0" Background="#FFE0F5EB">
            <Button x:Name="ServerConnectingBtn" Command="{Binding ServerConnect}" Content="서버 접속" Width="115" Canvas.Left="802" Canvas.Top="16" Height="33" IsEnabled="False"/>
            <TextBox x:Name="txtMsg"  Height="58" TextWrapping="Wrap" Width="788" Canvas.Left="153" Canvas.Top="506">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding msgSend}"/>
                </TextBox.InputBindings>
            </TextBox>
            <TextBox x:Name="textbox1" Height="418" TextWrapping="Wrap"  Width="912" Canvas.Left="29" Canvas.Top="70"/>
            <TextBox x:Name="PortBox" HorizontalAlignment="Left" Height="33" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Canvas.Left="667" Canvas.Top="16" TextChanged="PortBox_TextChanged" KeyDown="PortBox_KeyDown">
                
            </TextBox>
            <TextBlock TextWrapping="Wrap" Text="Port Number" Canvas.Left="560" Canvas.Top="8" Height="54" Width="98" FontSize="17" TextAlignment="Center"/>
            <TextBlock HorizontalAlignment="Left" TextWrapping="Wrap" Text="Nick Name" VerticalAlignment="Top" Canvas.Left="12" Canvas.Top="502" Height="20" Width="123" FontSize="14" TextAlignment="Center"/>
            <TextBlock x:Name="IDText" HorizontalAlignment="Left" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Canvas.Left="12" Canvas.Top="522" Height="38" Width="123" FontSize="21" TextAlignment="Center" Foreground="Blue"/>
        </Canvas>
    </Grid>
</Page>
