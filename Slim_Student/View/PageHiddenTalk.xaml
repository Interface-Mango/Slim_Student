<Page 
    x:Class="Slim_Student.View.PageHiddenTalk"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
    x:Name="Page"
    Width="972"
    Height="629"
    WindowWidth="1200" WindowHeight="700"
    mc:Ignorable="d">

    <Grid x:Name="MainPanel" >
        <Canvas x:Name="HiddenTitle" HorizontalAlignment="Left" Height="40" VerticalAlignment="Top" Width="972" Background="#FF94EA8B" Margin="0,0,0,0">
            <TextBlock TextWrapping="Wrap" Text="익명 단체 대화방" Canvas.Top="10" VerticalAlignment="Center" Canvas.Left="80" Height="20" Width="127.5" FontSize="14.667" FontWeight="Bold"/>
        </Canvas>
        <Canvas x:Name="HiddenCanvas" HorizontalAlignment="Left" Height="589" VerticalAlignment="Top" Width="972" Margin="0,40,0,0" Background="#FFE0F5EB">
            <Button Command="{Binding ServerConnect}" Content="커넥트" Width="115" Canvas.Left="779" Canvas.Top="26" Height="33"/>
            <TextBox x:Name="txtMsg"  Height="70" TextWrapping="Wrap" Width="624" Canvas.Left="157" Canvas.Top="488">
                <TextBox.InputBindings>
                    <KeyBinding Key="Enter" Command="{Binding msgSend}"/>
                </TextBox.InputBindings>
            </TextBox>
            <Button Command="{Binding msgSend}" Content="전송" Width="98" Canvas.Left="819" Canvas.Top="492" Height="70"/>
            <TextBox x:Name="textbox1" Height="394" TextWrapping="Wrap"  Width="846" Canvas.Left="71" Canvas.Top="70"/>
        </Canvas>
    </Grid>
</Page>
