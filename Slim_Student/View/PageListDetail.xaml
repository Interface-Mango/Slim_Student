<Page
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      mc:Ignorable="d" 
	  x:Class="Slim_Student.View.PageListDetail"
      Width="972"
      Height="629">
    <Grid Background="#B2D4EAAE">
        <Border x:Name="DialogNoticeTitle" BorderThickness="1" Height="50" VerticalAlignment="Top" Background="#B2B1D2EE" Margin="25,30,25,0" CornerRadius="20">
            <TextBlock TextWrapping="Wrap" Text="{Binding MyDetailTitle}" TextAlignment="Center" Margin="10" FontSize="20" FontWeight="Bold"/>
        </Border>
        <Border x:Name="DialogNoticeContent" BorderThickness="1" Background="#B2B1D2EE" Margin="25, 100, 25, 25" CornerRadius="20">
            <TextBlock TextWrapping="Wrap" FontSize="16" Padding="0" Margin="10" Text="{Binding MyDetailContent}"/>
        </Border>
    </Grid>
</Page>